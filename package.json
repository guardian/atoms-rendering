{
    "name": "@guardian/atoms-rendering",
    "repository": {
        "type": "ssh",
        "url": "https://github.com/guardian/atoms-rendering"
    },
    "version": "12.0.0",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "unpkg": "dist/index.umd.js",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "rollup --config && yarn createTsDec",
        "createTsDec": "tsc --emitDeclarationOnly true --declaration true --declarationDir dist/ --noEmit false",
        "prettier:check": "prettier . --check",
        "prettier:fix": "prettier . --write",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "tsc": "tsc",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "jest --watch",
        "test:ci": "jest",
        "validate": "yarn tsc && yarn test:ci && yarn lint",
        "chromatic": "chromatic",
        "release": "yarn validate && yarn build && np --no-tests"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/helper-builder-react-jsx": "^7.10.4",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
        "@babel/plugin-proposal-optional-chaining": "^7.12.7",
        "@babel/plugin-transform-runtime": "^7.13.10",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.1",
        "@emotion/babel-preset-css-prop": "10.0.27",
        "@emotion/eslint-plugin": "^11.0.0",
        "@emotion/react": "^11.1.5",
        "@guardian/src-button": "^3.2.1",
        "@guardian/src-foundations": "^3.2.1",
        "@guardian/src-icons": "^3.2.1",
        "@guardian/src-radio": "^3.2.1",
        "@guardian/types": "^3.0.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^17.1.0",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "@storybook/addon-docs": "^6.1.11",
        "@storybook/addons": "^6.1.11",
        "@storybook/react": "^6.1.11",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@types/jest": "^26.0.15",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.1",
        "@types/youtube": "^0.0.39",
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^3.10.1",
        "babel-loader": "^8.2.2",
        "chromatic": "^5.4.0",
        "eslint": "^7.13.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "np": "^7.2.0",
        "preact": "^10.5.7",
        "preact-render-to-string": "^5.1.12",
        "prettier": "^2.1.2",
        "pretty-quick": "^3.1.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "rollup": "^2.39.1",
        "rollup-plugin-clear": "^2.0.7",
        "rollup-plugin-visualizer": "^4.2.0",
        "ts-jest": "^24.3.0",
        "typescript": "^4.1.3"
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "/dist"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@emotion",
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "plugin:react/recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "@emotion/no-vanilla": "error",
            "@emotion/import-from-emotion": "error",
            "@emotion/styled-import": "error",
            "no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars": "off",
            "@typescript-eslint/no-unused-vars-experimental": "error"
        }
    },
    "husky": {
        "hooks": {
            "pre-push": "pretty-quick --staged && yarn lint && yarn tsc && yarn test --watchAll=false"
        }
    },
    "peerDependencies": {
        "@emotion/react": "^11.1.5",
        "@guardian/src-button": "^3.2.1",
        "@guardian/src-foundations": "^3.2.1",
        "@guardian/src-icons": "^3.2.1",
        "@guardian/src-radio": "^3.2.1",
        "@guardian/types": "^3.0.0",
        "preact": "^10.5.7",
        "preact-render-to-string": "^5.1.12",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "typescript": "^4.1.3"
    },
    "jest": {
        "testEnvironment": "jest-environment-jsdom-sixteen",
        "transformIgnorePatterns": [
            "node_modules/(?!(@guardian/src-foundations|@guardian/types|@guardian/libs)/)"
        ],
        "preset": "ts-jest/presets/js-with-babel",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "diagnostics": false,
                "tsConfigFile": "tsconfig.json"
            }
        },
        "testMatch": [
            "**/*.test.+(ts|tsx|js)"
        ],
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ]
    },
    "dependencies": {
        "youtube-player": "^5.5.2"
    }
}
