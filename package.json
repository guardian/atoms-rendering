{
    "name": "@guardian/atoms-rendering",
    "version": "2.0.9",
    "source": "src/index.ts",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "unpkg": "dist/index.umd.js",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "microbundle --jsx React.createElement",
        "dev": "microbundle watch --jsx React.createElement",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "tsc": "tsc",
        "lint": "eslint . --ext .ts",
        "test": "jest --watch",
        "test:ci": "jest",
        "chromatic": "chromatic"
    },
    "devDependencies": {
        "@babel/core": "^7.9.6",
        "@babel/plugin-transform-runtime": "^7.12.1",
        "@babel/preset-react": "^7.10.4",
        "@babel/preset-typescript": "^7.12.1",
        "@guardian/src-foundations": "^2.4.0",
        "@guardian/src-icons": "^2.5.0",
        "@guardian/types": "^0.4.4",
        "@storybook/addon-docs": "^6.0.28",
        "@storybook/addons": "^6.0.28",
        "@storybook/react": "^6.0.28",
        "@testing-library/jest-dom": "^5.8.0",
        "@testing-library/react": "^11.1.1",
        "@types/jest": "^26.0.14",
        "@types/react-dom": "^16.9.9",
        "@types/youtube": "^0.0.39",
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^3.0.1",
        "babel-loader": "^8.1.0",
        "babel-plugin-const-enum": "^1.0.1",
        "babel-plugin-emotion": "^10.0.33",
        "chromatic": "^5.2.0",
        "emotion": "^10.0.27",
        "eslint": "^7.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^4.3.0",
        "jest": "^26.5.2",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "microbundle": "^0.12.0",
        "prettier": "^2.0.5",
        "pretty-quick": "^2.0.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "ts-jest": "^24.3.0"
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "/dist"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended",
            "plugin:react/recommended",
            "plugin:@typescript-eslint/recommended"
        ]
    },
    "husky": {
        "hooks": {
            "pre-push": "pretty-quick --staged && yarn lint && yarn tsc && yarn test --watchAll=false"
        }
    },
    "peerDependencies": {
        "@guardian/src-foundations": "^2.4.0",
        "@guardian/src-icons": "^2.5.0",
        "emotion": "^10.0.27",
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "jest": {
        "testEnvironment": "jest-environment-jsdom-sixteen",
        "transformIgnorePatterns": [
            "node_modules/(?!(@guardian/src-foundations|@guardian/types)/)"
        ]
    }
}
