{
    "name": "@guardian/atoms-rendering",
    "version": "25.0.2",
    "repository": {
        "type": "ssh",
        "url": "https://github.com/guardian/atoms-rendering"
    },
    "main": "dist/commonjs/index.js",
    "module": "dist/esm/index.js",
    "source": "src/index.ts",
    "types": "dist/types/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "yarn build:esm && yarn build:commonjs",
        "build-storybook": "build-storybook",
        "build:commonjs": "tsc --outDir dist/commonjs --module CommonJS --target ES2018",
        "build:esm": "tsc",
        "chromatic": "chromatic",
        "lint": "eslint . --ext .ts,.tsx",
        "nginx:setup": "./scripts/nginx/setup.sh",
        "prettier:check": "prettier . --check",
        "prettier:fix": "prettier . --write",
        "release": "yarn validate && yarn build && changeset publish",
        "storybook": "start-storybook -p 6006",
        "test": "jest --watch",
        "test:ci": "jest",
        "tsc": "tsc --noEmit",
        "validate": "yarn tsc && yarn test:ci && yarn lint"
    },
    "husky": {
        "hooks": {
            "pre-push": "pretty-quick --staged && yarn lint && yarn tsc && yarn test --watchAll=false"
        }
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json"
        },
        "plugins": [
            "@emotion",
            "@typescript-eslint"
        ],
        "extends": [
            "@guardian/eslint-config-typescript",
            "plugin:react/recommended",
            "plugin:@guardian/eslint-plugin-source-foundations/recommended",
            "plugin:@guardian/eslint-plugin-source-react-components/recommended"
        ],
        "rules": {
            "react/no-unknown-property": [
                "error",
                {
                    "ignore": [
                        "css"
                    ]
                }
            ],
            "react/react-in-jsx-scope": "off",
            "import/order": "off",
            "import/no-default-export": "off",
            "sort-imports": "off",
            "@typescript-eslint/consistent-type-imports": "off",
            "eslint/prefer-optional-chain": "off",
            "@typescript-eslint/naming-convention": "off",
            "@typescript-eslint/no-unsafe-argument": "off",
            "@typescript-eslint/prefer-optional-chain": "off",
            "@typescript-eslint/no-unnecessary-condition": "off",
            "eslint-comments/require-description": "off",
            "@typescript-eslint/prefer-nullish-coalescing": "off",
            "@typescript-eslint/no-unsafe-assignment": "off",
            "@typescript-eslint/no-unsafe-member-access": "off",
            "@typescript-eslint/array-type": "off",
            "@typescript-eslint/no-floating-promises": "off",
            "@typescript-eslint/consistent-indexed-object-style": "off",
            "@typescript-eslint/no-misused-promises": "off",
            "@typescript-eslint/unbound-method": "off",
            "@typescript-eslint/require-await": "off",
            "@typescript-eslint/restrict-template-expressions": "off",
            "@typescript-eslint/restrict-plus-operands": "off",
            "no-unused-vars": "off",
            "@emotion/import-from-emotion": "error",
            "@emotion/no-vanilla": "error",
            "@emotion/styled-import": "error",
            "@typescript-eslint/no-unused-vars": "error"
        },
        "ignorePatterns": [
            "/dist",
            "node_modules"
        ],
        "root": true
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "globals": {
            "ts-jest": {
                "diagnostics": false,
                "tsconfig": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "preset": "ts-jest/presets/js-with-ts",
        "testEnvironment": "jest-environment-jsdom-sixteen",
        "testMatch": [
            "**/*.test.+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "node_modules/(?!(@guardian/src-foundations|@guardian/types|@guardian/libs)/)"
        ]
    },
    "dependencies": {
        "is-mobile": "^3.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@changesets/changelog-github": "^0.4.3",
        "@changesets/cli": "^2.21.1",
        "@emotion/eslint-plugin": "^11.7.0",
        "@emotion/react": "11.1.5",
        "@guardian/ab-core": "^2.0.0",
        "@guardian/commercial-core": "5.0.0",
        "@guardian/consent-management-platform": "11.0.0",
        "@guardian/eslint-config-typescript": "^2.0.1",
        "@guardian/eslint-plugin-source-foundations": "^8.0.4",
        "@guardian/eslint-plugin-source-react-components": "^10.0.4",
        "@guardian/libs": "10.0.0",
        "@guardian/source-foundations": "7.0.0",
        "@guardian/source-react-components": "9.0.0",
        "@guardian/tsconfig": "^0.2.0",
        "@storybook/addon-docs": "^6.5.13",
        "@storybook/addon-viewport": "^6.5.13",
        "@storybook/addons": "^6.5.13",
        "@storybook/react": "^6.5.13",
        "@testing-library/jest-dom": "^5.16.3",
        "@testing-library/react": "^11.2.2",
        "@types/jest": "^26.0.15",
        "@types/lodash.debounce": "^4.0.6",
        "@types/react": "^17.0.2",
        "@types/react-dom": "^17.0.2",
        "@types/youtube": "^0.0.46",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "babel-loader": "^8.2.4",
        "chromatic": "^5.4.0",
        "eslint": "^8.7.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "husky": "^4.3.0",
        "jest": "^26.6.3",
        "jest-environment-jsdom-sixteen": "^1.0.3",
        "lodash.debounce": "4.0.6",
        "np": "^7.2.0",
        "prettier": "^2.6.2",
        "pretty-quick": "^3.1.0",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "require-from-string": "^2.0.2",
        "ts-jest": "^26.5.6",
        "ts-loader": "^8.4.0",
        "tslib": "^2.4.0",
        "typescript": "4.8.4",
        "web-vitals": "^2.1.4",
        "webpack": "^4.0.0"
    },
    "peerDependencies": {
        "@emotion/react": "^11.1.5",
        "@guardian/commercial-core": "^5.0.0",
        "@guardian/consent-management-platform": "^11.0.0",
        "@guardian/libs": "^10.0.0",
        "@guardian/source-foundations": "^7.0.0",
        "@guardian/source-react-components": "^9.0.0",
        "lodash.debounce": "^4.0.6",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "typescript": "^4.8.4"
    },
    "peerDependenciesMeta": {
        "@guardian/commercial-core": {
            "optional": true
        },
        "@guardian/consent-management-platform": {
            "optional": true
        }
    },
    "publishConfig": {
        "access": "public"
    }
}
