{
    "extends": "@guardian/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react",
        "outDir": "dist/esm"
    },
    "include": ["src", ".storybook"]
}
