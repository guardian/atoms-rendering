{
    "extends": "@guardian/tsconfig",
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@emotion/react"
    },
    "include": ["src", ".storybook"],
}
